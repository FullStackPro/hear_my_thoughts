<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/bg_primary_green</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/bg_primary_dark_green</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:navigationBarColor">@color/bg_primary_light_green</item>
        <item name="android:colorAccent">@color/accent_yellow</item>
    </style>
</resources>
