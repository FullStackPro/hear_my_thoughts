<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/msg_item_padding">

    <com.nmp90.hearmythoughts.ui.views.CircleImageView
        android:id="@+id/avatar"
        app:border_width="2dp"
        app:border_color="@color/bg_primary_dark_green"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/avatar_margin"
         />

    <TextView
        android:id="@+id/tv_sender"
        android:layout_below="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:text="Georgi"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/avatar"
        android:paddingRight="@dimen/msg_padding_side"
        android:paddingLeft="@dimen/msg_padding"
        android:paddingTop="@dimen/msg_padding"
        android:paddingBottom="@dimen/msg_padding"
        android:background="@drawable/bubble_right"
        android:gravity="right|center_vertical"
        android:textColor="@color/msg_text"
        android:textSize="@dimen/msg_text"
        android:layout_marginTop="15dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:shadowColor="@android:color/white" />
</RelativeLayout>