<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/bg_primary_light_green"
    android:gravity="bottom">
    <us.feras.mdv.MarkdownView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/markdownView" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <com.nmp90.hearmythoughts.ui.views.RobotoEditText
            android:id="@+id/et_markdown"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:hint="@string/write_markdown"
            />

        <com.nmp90.hearmythoughts.ui.views.RobotoTextView
            android:id="@+id/btn_send"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send"/>


    </LinearLayout>


</LinearLayout>